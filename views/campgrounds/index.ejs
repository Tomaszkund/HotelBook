<%- include("../partials/header") %> 


<body style="background-color: #f6f4f1;"></body>
<div class="container">
    <header class="jumbotron" font"background-color: #f6f4f1 ;div style="margin-top:20px; box-shadow: 1px 1px 1px 1.5px rgba(11, 11, 11, 2.95)"> 
        <div class="container"> 
            <h1>Witamy w Hotel Booking</h1>
            <p>Znajdź Hotel, który Cię interesuję i zarezerwuj pokój!</p>
         <p>
            <a class="btn btn-outline-primary btn-large" href="/campgrounds/new">Add new Hotel</a>  
         </p>
        </div>
    </header>


    <div class="text-center" style="display: flex; flex-wrap: wrap;">     
        <% campgrounds.forEach(function(campground){ %> 
            <div class="col-md-3 col-sm-6" text-center>
                <div class="card mb-3">                 
                    <img class="card-img" src="<%= campground.image %>">
                    <div class="caption">
                        <h4><%= campground.name %></h4>                       
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
                
                
                
            </div>
            
        <% }); %> 
    </div>    
</div>

<%- include("../partials/footer") %> 

